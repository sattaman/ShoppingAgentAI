{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "PROJECT_KEY",
        "CLIENT_ID",
        "CLIENT_SECRET",
        "AUTH_URL",
        "API_URL"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
